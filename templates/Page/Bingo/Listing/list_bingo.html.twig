{% extends 'Layout/Authenticated/base.html.twig' %}

{% block sub_title %}Vos bingos{% endblock sub_title %}

{% block body_content %}
    <div class="flex flex-col">
        <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
            <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
                <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                #
                            </th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Id
                            </th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Nom
                            </th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Date de création
                            </th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider text-center">
                                Action
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for bingo in bingos %}
                        <tr class="{{ loop.index % 2 == 0 ? 'bg-white' : 'bg-gray-50' }}">
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                {{ loop.index }}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                {{ bingo.id }}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                {{ bingo.name }}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                {{ bingo.creationDate|date('H:i d/m/Y') }}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-center">
                                <a href="{{ path('app_bingo_card_listing_list_bingo_card', {'id': bingo.id}) }}" class="text-white bg-purple hover:bg-green-700 rounded rounded-lg shadow-sm bg-green-500 py-2 px-4 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Vos grilles</a>
                                <a href="{{ path('app_bingo_deletion_delete_bingo', {'id': bingo.id}) }}" class="text-white bg-purple hover:bg-red-700 rounded rounded-lg shadow-sm bg-red-500 py-2 px-4 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Supprimer</a>
                            </td>
                        </tr>
                        {% else %}
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium" colspan="5">
                                    <div class="w-full flex justify-center py-2 px-4">
                                        Aucun bingo n'a encore été crée
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        <tr>
                            <td class="whitespace-nowrap text-right text-sm font-medium p-0" colspan="5">
                               <a href="{{ path('app_bingo_creation_create_bingo') }}" class="w-full flex justify-center py-2 px-4 rounded-br-lg rounded-bl-lg shadow-sm text-sm font-medium text-white bg-purple-500 hover:bg-purple-700 focus:outline-none">Créer un nouveau bingo</a>
                           </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock body_content %}
