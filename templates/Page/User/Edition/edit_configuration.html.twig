{% extends 'Layout/Authenticated/base.html.twig' %}

{% block sub_title %}Configuration{% endblock sub_title %}

{% block body_content %}
    {{ form_start(form, {'attr': {'class': 'space-y-8 divide-y divide-gray-200'}}) }}
    <div class="space-y-8 divide-y divide-gray-200 sm:space-y-5">
        <div>
            <div>
                <h3 class="text-lg leading-6 font-medium text-gray-900">Couleur d'une carte de bingo</h3>
                <p class="mt-1 max-w-2xl text-sm text-gray-500">
                    Ces options sont utilisées sur la page d'une carte bingo généré. Vous pouvez voir ces modifications à l'oeuvre
                    {% if bingo_card is not null %}
                        <a href="{{ path('app_bingo_card_showing_show_bingo_card', {'id': bingo_card.id}) }}"
                           class="text-blue-700 hover:text-blue-900 hover:underline">ici</a>.
                    {% else %}
                        si vous générez une nouvelle grille de bingo depuis
                        <a href="{{ path('app_bingo_listing_list_bingo') }}" class="text-blue-700 hover:text-blue-900 hover:underline">cette page</a>.
                    {% endif %}
                </p>
            </div>
            <div class="mt-6 sm:mt-5 space-y-6 sm:space-y-5">
                <div class="sm:grid sm:grid-cols-3 sm:gap-4 sm:items-start sm:border-t sm:border-gray-200 sm:pt-5">
                    {{ form_label(form.bingoBackgroundColor, 'Couleur de l\'arrière plan', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2'}}) }}
                    <div class="mt-1 sm:mt-0 sm:col-span-2">
                        <div class="flex rounded-md">
                            {{ form_widget(form.bingoBackgroundColor, {'attr': {'class': 'bg-transparent rounded-md'}}) }}
                        </div>
                    </div>
                </div>
            </div>


            <div class="mt-6 sm:mt-5 space-y-6 sm:space-y-5">
                <div class="sm:grid sm:grid-cols-3 sm:gap-4 sm:items-start sm:border-t sm:border-gray-200 sm:pt-5">
                    {{ form_label(form.bingoButtonUncheckedColor, 'Couleur des boutons non validé', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2'}}) }}
                    <div class="mt-1 sm:mt-0 sm:col-span-2">
                        <div class="flex rounded-md">
                            {{ form_widget(form.bingoButtonUncheckedColor, {'attr': {'class': 'bg-transparent rounded-md'}}) }}
                        </div>
                    </div>
                </div>
            </div>


            <div class="mt-6 sm:mt-5 space-y-6 sm:space-y-5">
                <div class="sm:grid sm:grid-cols-3 sm:gap-4 sm:items-start sm:border-t sm:border-gray-200 sm:pt-5">
                    {{ form_label(form.bingoButtonCheckingColor, 'Couleur des boutons en cours de validation', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2'}}) }}
                    <div class="mt-1 sm:mt-0 sm:col-span-2">
                        <div class="flex rounded-md">
                            {{ form_widget(form.bingoButtonCheckingColor, {'attr': {'class': 'bg-transparent rounded-md'}}) }}
                        </div>
                    </div>
                </div>
            </div>


            <div class="mt-6 sm:mt-5 space-y-6 sm:space-y-5">
                <div class="sm:grid sm:grid-cols-3 sm:gap-4 sm:items-start sm:border-t sm:border-gray-200 sm:pt-5">
                    {{ form_label(form.bingoButtonCheckedColor, 'Couleur des boutons validé', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2'}}) }}
                    <div class="mt-1 sm:mt-0 sm:col-span-2">
                        <div class="flex rounded-md">
                            {{ form_widget(form.bingoButtonCheckedColor, {'attr': {'class': 'bg-transparent rounded-md'}}) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="pt-5">
        <div class="flex justify-end">
            <a href="{{ path('app_home') }}"
               class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Annuler
            </a>
            <button type="submit"
                    class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Sauvegarder les modifications
            </button>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock body_content %}